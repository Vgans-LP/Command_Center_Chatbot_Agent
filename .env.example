# Option B: set IDs directly (use when USE_SSM_PARAMS=0)
# export DATA_SOURCE_ID=ds-REPLACE_ME
# export S3_BUCKET=123456789012-eu-west-3-kb-data-bucket

# ===== Streamlit UI for webhook test (app_streamlit.py) =====
