# ===== Agent runtime (agentcore_kb_agent.py) =====
export AWS_REGION=eu-central-1
export MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0  # or any Bedrock text model id

# Knowledge Base
export KB_ID=kb-xxxxxxxxxxxxxxxx

# Optional knobs
export TOP_K=8
export MIN_SCORE=0.0
export PORT=8080

# ===== Ingestion/sync helper (kb_ingest_sync.py) =====
